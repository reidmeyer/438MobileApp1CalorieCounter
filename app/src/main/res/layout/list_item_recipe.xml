<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!--THIS IS AN XML FILE FOR THE LISTVIEW ROW-->

    <TextView
            android:id="@+id/recipe_list_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="4dp"
            android:maxLines="1"
            android:paddingEnd="60dp"
            android:textColor="#000000"
            android:textSize="25sp"
            tools:text="Detail" android:paddingRight="60dp" android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp" android:layout_alignParentRight="true"/>

    <RelativeLayout
            android:id="@+id/recipe_list_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">


        <!--intentionally limited below width -->
        <TextView
                android:id="@+id/recipe_list_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="25sp"
                tools:text="Title" />



    </RelativeLayout>
</RelativeLayout>
